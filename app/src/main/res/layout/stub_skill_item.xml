<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linHolder"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linLeftSkill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/starFavorite"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/favoritestaricon"
                android:button="@drawable/emptyimg"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linRightSkill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.75"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgGrip"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="25dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/griphorizontalicon" />

            <TextView
                android:id="@+id/txtSkillValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="serif"
                android:text="00"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>